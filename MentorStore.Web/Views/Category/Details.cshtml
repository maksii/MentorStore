@model  MentorStore.Web.Models.CategoryViewModel

<h2>Details</h2>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <h1>@Model.Category.CategoryName</h1> 
        </dt>
        <dt>
            @foreach (var item in Model.Products)
            {
                <p>Product: @item.Name</p>
                <p>@Html.ActionLink("Details", "Details", new { id = Model.Category.Id })</p>
            }
        </dt>
    </dl>
</div>

